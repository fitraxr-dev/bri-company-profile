{
  "name": "brimo-backend",
  "version": "1.0.0",
  "description": "BRImo Backend API - Digital Banking Solution by Bank BRI",
  "private": true,
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node -r dotenv/config src/index.js dotenv_config_path=.env.dev",
    "dev:watch": "nodemon -r dotenv/config src/index.js dotenv_config_path=.env.dev",
    "lint": "eslint . --ext .js",
    "migrate": "node src/migrations/migrate.js",
    "migrate:dev": "node -r dotenv/config src/migrations/migrate.js dotenv_config_path=.env.dev",
    "seed": "node src/seed/seed.js",
    "seed:dev": "node -r dotenv/config src/seed/seed.js dotenv_config_path=.env.dev",
    "db:setup": "npm run migrate && npm run seed",
    "db:setup:dev": "npm run migrate:dev && npm run seed:dev"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "nodemon": "^2.0.0"
  }
}
